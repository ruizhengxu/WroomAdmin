<div  id="center">

    <h2>Ajouter un pilote</h2>

</div>

<form action="/pilotes/ajouter/ajout" method="POST">
    <div class="champs">
        <div class="label">
            <label for="prenom">Prénom</label>
        </div>

        <input type="text" name="prenom" size="20">
    </div>
    <div class="champs">
        <div class="label">
            <label for="nom">Nom</label>
        </div>
        <input type="text" name="nom" size="20">
    </div>
    <div class="champs">
        <div class="label">
            <label for="datenais">Date de naissance</label>
        </div>
        <input type="date" name="datenais">
    </div>
    <div class="champs">
        <div class="label">
            <label for="nationalite">Nationalité</label>
        </div>
        <select name="nationalite">
            {{#each listeNationalites}}
                <option value="{{this.paynum}}">{{this.paynat}}</option>
            {{/each}}
        </select>
    </div>

    <div class="champs">
        <div class="label">
            <label for="ecurie">Ecurie</label>
        </div>
        <select name="ecurie">
            {{#each listeEcuries}}
                <option value="{{this.ecunum}}">{{this.ecunom}}</option>
            {{/each}}
        </select>
    </div>
    <div class="champs">
        <div class="label">
            <label for="points">Points</label>
        </div>
        <input type="text" name="points" size="10">   pts
    </div>
    <div class="champs">
        <div class="label">
            <label for="poids">Poids</label>
        </div>
        <input type="text" name="poids" size="6"> kg
    </div>
    <div class="champs">
        <div class="label">
            <label for="taille">Taille</label>
        </div>
        <input type="text" name="taille" size="6"> cm
    </div>
    <div class="champs">
        <div class="label">
            <label for="description">Description</label>
        </div>
        <textarea name="description"  style="height:50px; width: 50%"></textarea>
    </div>

    <div id="add_form_button">
        <button type="submit" form="form1" value="Submit">AJOUTER</button>
    </div>

</form>
<br class="myboth" />
